@model IEnumerable<ATSProject.Models.Job>
@{
    ViewData["Title"] = "Job Openings";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">💼 Current Job Openings</h1>
        <p class="text-muted">Find the role that suits you best and apply today.</p>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">⚠ No jobs available at the moment.</div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var job in Model)
            {
                <div class="col-md-6">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body d-flex flex-column">
                            <h4 class="fw-bold">@job.JobTitle</h4>
                            <p class="text-muted small mb-2">
                                📅 Posted on: @job.CreatedAt.ToString("dd MMM yyyy")
                            </p>
                            <p class="flex-grow-1">
                                @(string.IsNullOrEmpty(job.Description)
                                    ? "No description available."
                                    : job.Description.Length > 150
                                    ? job.Description.Substring(0, 150) + "..."
                                    : job.Description)
                            </p>

                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-controller="Applications" asp-action="Apply" asp-route-jobId="@job.Id"
                                   class="btn btn-primary btn-sm rounded-pill px-4">
                                    Apply Now 🚀
                                </a>
                                <a asp-controller="Jobs" asp-action="Details" asp-route-id="@job.Id"
                                   class="text-decoration-none small fw-bold text-secondary">
                                    View Details →
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
