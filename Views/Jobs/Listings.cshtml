@model IEnumerable<ATSProject.Models.Job>
@{
    ViewData["Title"] = "Current Openings";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 fw-bold text-primary">🌟 Current Job Openings</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">No jobs available right now. Please check back later!</div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var job in Model)
            {
                <div class="col-md-6">
                    <div class="card shadow-lg border-0 rounded-4 h-100">
                        <div class="card-body">
                            <h4 class="fw-bold">@job.JobTitle</h4>
                            <p class="text-muted">@job.Description</p>
                            <p class="small text-secondary">
                                📅 Posted on: @job.CreatedAt.ToString("yyyy-MM-dd")
                            </p>
                            <div class="text-end">
                                <a asp-controller="Applications" asp-action="Apply" asp-route-jobId="@job.Id"
                                   class="btn btn-success">
                                    📝 Apply Now
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
